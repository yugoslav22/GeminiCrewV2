	<section id="contact" class="md-padding">
		<div class="container">

			<div class="row text-center">
				<div class="col-md-4 offset-md-4">
					<div class="section-header">
						<h2 class="title">Add Daily Program</h2>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-lg-12">
					<form action="/admin/daily_prog" method="POST" enctype="multipart/form-data">
						<div class="row">
							<div class="offset-2 col-md-8">

								<div class="form-group">
									<input class="form-control" name="daily_title" type="text" placeholder="Title of event."
										required="required"
										data-validation-required-message="Please enter the title of event.">
									<p class="help-block text-danger"></p>
								</div>

								



								{{!-- <div class="form-group">
									<textarea class="form-control" name="daily_date" placeholder="Describe of event."
