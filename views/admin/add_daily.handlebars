											<option>Pool Bar</option>
											

										</select>
									</div>
								</div>




								<div class="form-group">
									<input class="form-control" name="daily_image" type="file" required="required"
										data-validation-required-message="Please select your image.">
									<p class="help-block text-danger"></p>
								</div>



							</div>

							<div class="clearfix"></div>
							<div class="col-lg-12 text-center">
								<div id="success"></div>
								<button class="main-btn" type="submit">Add Post</button>
							</div>
						</div>
					</form>
				</div>
			</div>

		</div>
	</section>